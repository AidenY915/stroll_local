<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<select id = "checkPassword" resultType="user">
		SELECT id FROM USER WHERE ID = #{id} AND PASSWORD = #{password}
	</select>
	<select id = "selectUser" parameterType="user">
		SELECT * FORM USER WHERE ID = #{id} 
	</select>
	<insert id = "registerUser" parameterType="user">
		INSERT INTO USER VALUES(#{id}, #{password}, #{nickname}, #{email})
	</insert>
</mapper>