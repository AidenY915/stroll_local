<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="image">
	<insert id = "insertImg" parameterType="image">
		INSERT INTO IMAGE(PLACE_NO, IMAGE_PATH) VALUE(#{placeNo}, #{imagePath})
	</insert>
	<select id = "selectImgsByPlaceNo" parameterType="int" resultType="image">
		SELECT NO AS no, PLACE_NO AS placeNo, IMAGE_PATH AS imagePath  FROM IMAGE WHERE PLACE_NO = #{placeNo}  
	</select>
</mapper>